@model Usuario

<h1>Edição de Usuario</h1>

<form method="post" asp-controller="Home" asp-action="UsuarioEdicao">

    <div>
        <input asp-for="Nome" placeholder="Nome" />
        <span asp-validation-for="Nome"></span>
    </div>

    <div>
        <input asp-for="Email" placeholder="E-mail" />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <input asp-for="Telefone" placeholder="Telefone" />
        <span asp-validation-for="Telefone"></span>
    </div>
    <br />
    <br />
    <button type="submit">Salvar</button>
</form>