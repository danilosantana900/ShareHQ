@model Usuario

<h1>Removendo Usuario</h1>

<form method="post" asp-controller="Home" asp-action="UsuarioRemocao">

    <div>
        <input asp-for="Nome" placeholder="Nome" disabled/>
        <span asp-validation-for="Nome"></span>
    </div>
    <div>
        <input asp-for="Email" placeholder="E-mail" disabled/>
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <input asp-for="Telefone" placeholder="Telefone" disabled/>
        <span asp-validation-for="Telefone"></span>
    </div>
    <br />
    <br />
    <p>Tem certeza que quer remover?</p>
    <button type="submit">Remover</button>

</form>